<div class="row">
  <div class="col-sm-6 col-sm-offset-3">

    <div class="lead">
      <a href="/cards/{{card._id}}">{{card.topic}}</a>
    </div>
      
    <p>{{card.exercises}}</p>
    <form action = "/cards/{{card._id}}?_method=PUT", method="post">
   
    <!-- <form action="/edit/{{card._id}}" method="post">  form(action=`/pets/${pet._id}?_method=PUT`, method="POST")-->

        <div class="form-group">
          <label for="card-title">Topics</label>
          <input type="text" name="topic" class="form-control" id="card-topic" value="{{card.topic}}">
        </div>
        <div class="form-group">
          <label for="card-exercises">Exercises</label>
          <input type="text" name="exercises" class="form-control" id="card-exercises" value="{{card.exercises}}">
        </div>

        <div class='text-right'>
          <button type="submit" class="btn btn-primary">Edit Card</button>
        </div>
    </form>

    <form action = "/cards/{{card._id}}?_method=DELETE" method = "post">
     <!-- <form action="/delete/{{card._id}}" method="post" >    form(action=`/cards/${pet._id}?_method=DELETE`, method="POST")-->
      <input type="hidden" name="_method" value="DELETE">
      <button type="submit">Delete resource</button>
    </form>


  </div>
</div>